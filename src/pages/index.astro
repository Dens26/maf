---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/advisor.jpg';

const seoTitle = "Mandataire administratif pour formalités d'entreprise";
const seoDescription =
    "Accompagnement professionnel pour la création, la modification et la radiation d'entreprise. Simplifiez vos démarches administratives avec un mandataire expérimenté.";

const heroContent = {
    title: 'Simplifiez vos formalités',
    description:
        'Création, modification, radiation… Je prends en charge vos démarches administratives pour vous permettre de vous concentrer sur votre activité.',
    buttons: [
        {
            text: 'Demander un devis',
            link: '/contact',
            target: '_self',
        },
        {
            text: 'En savoir plus',
            link: '/services',
            target: '_self',
        },
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2,
};

const featuresSection = {
    eyebrow: 'Mes services',
    title: 'Un accompagnement complet et personnalisé',
    description:
        'Je vous accompagne dans toutes vos démarches administratives liées à la vie de votre entreprise. Gain de temps, conformité, tranquillité d’esprit.',
    features: featureLists.main.features,
    button: {
        text: 'Voir tous les services',
        link: '/services',
        variant: 'primary' as const,
    },
};

const FooterCta = {
    eyebrow: "Besoin d'aide ?",
    title: 'Confiez-moi vos formalités dès aujourd’hui',
    description:
        'Je vous aide à sécuriser vos démarches administratives en toute simplicité. Contactez-moi pour en discuter.',
    hideCta: false,
    button: {
        text: 'Me contacter',
        link: '/contact',
        target: '_self',
    },
};

const styleGuideSection = {
    eyebrow: 'Pourquoi me faire confiance ?',
    headline: 'Clarté, réactivité et professionnalisme',
    description:
        'Chaque formalité est traitée avec rigueur et transparence. Vous bénéficiez d’un accompagnement humain et d’un suivi personnalisé, sans jargon ni paperasse inutile.',
    image: {
        src: styleGuideImage,
        alt: 'Documents administratifs en cours de traitement',
    },
    buttons: [
        {
            text: 'Découvrir mon approche',
            link: '/process',
            variant: 'primary' as const,
        },
    ],
};

const sideBySideStats = {
    eyebrow: 'Chiffres clés',
    title: 'Des formalités gérées avec efficacité',
    description:
        'Des dizaines d’entrepreneurs m’ont déjà fait confiance pour gérer leurs obligations administratives rapidement et sans erreur.',
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: 'Un interlocuteur unique et disponible',
        description:
            'Je suis votre unique contact pour toutes vos formalités. Réponses rapides, explications claires et résultats conformes.',
        button: {
            text: 'Voir les témoignages',
            link: '/stories',
            variant: 'primary' as const,
        },
    },
};

const mainCta = {
    eyebrow: 'Démarches facilitées',
    title: 'Formalités administratives sans tracas',
    description:
        'Ne perdez plus de temps dans les méandres administratifs. Confiez vos démarches à un professionnel de confiance.',
    button: {
        text: 'Commencer maintenant',
        link: '/contact',
        variant: 'primary' as const,
        target: '_self' as const,
    },
};

const logosSection = {
    eyebrow: "Ils m'ont fait confiance",
    logos: logoLists.main.logos,
};

const faqsSection = {
    eyebrow: "Questions fréquentes",
    title: 'Vos questions, mes réponses',
    description: 'Voici les réponses aux questions les plus souvent posées sur mes prestations et mon fonctionnement.',
    faqs: faqLists.main.faqs,
};

const recentPostsSection = {
    eyebrow: "Conseils pratiques",
    title: "Mieux comprendre vos obligations",
    description: "Je vous partage des conseils utiles pour mieux appréhender les démarches administratives et rester en conformité avec la réglementation.",
    button: {
        text: "Lire les articles",
        link: "/blog",
        variant: "primary" as const,
    },
};
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={2} category="Formalities" />
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <!-- <Logos content={logosSection} background="base" padding="small" /> -->
    <Stats content={sideBySideStats} background="dark" padding="base" />
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
