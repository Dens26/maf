---
import Button from '@components/ui/Button.astro';
import Input from '@components/ui/form/Input.astro';
import Textarea from '@components/ui/form/Textarea.astro';
import Radio from '@components/ui/form/Radio.astro';
import Checkbox from '@components/ui/form/Checkbox.astro';
import Select from '@components/ui/form/Select.astro';

const hearAboutOptions = [
    { label: 'Moteur de recherche', value: 'search' },
    { label: 'Réseaux sociaux', value: 'social' },
    { label: 'Amis/Collègues', value: 'referral' },
    { label: 'Autre', value: 'other' },
];

const interestOptions = [
  { label: "Création d'entreprise", value: "creation" },
  { label: "Modification d'adresse", value: "modification-adresse" },
  { label: "Modification d'activité", value: "modification-activite" },
  { label: "Cessation d'activité", value: "cessation" },
  { label: "Corrections RNE", value: "correction-rne" },
  { label: "Complétion données RNE", value: "completion-rne" },
  { label: "Autres formalités", value: "autres" }
];

const serviceOptions = [
  { label: "Demande de création", value: "creation" },
  { label: "Demande de modification d'adresse", value: "modification-adresse" },
  { label: "Demande de modification d'activité", value: "modification-activite" },
  { label: "Demande de cessation", value: "cessation" },
  { label: "Demande de correction", value: "correction-rne" },
  { label: "Demande de complétion", value: "completion-rne" }
];

const budgetOptions = [
    { label: '$5,000 - $10,000', value: '5-10k' },
    { label: '$10,000 - $25,000', value: '10-25k' },
    { label: '$25,000 - $50,000', value: '25-50k' },
    { label: '$50,000+', value: '50k+' },
];

const formBackground = 'light';
---

<form id="contact-form" class="space-y-6 bg-white p-6 rounded-lg">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Input label="Nom" id="name" name="name" required background={formBackground} />
        <Input label="Email" type="email" id="email" name="email" required background={formBackground} />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Input label="Téléphone" type="tel" id="phone" name="phone" background={formBackground} />
        <Input label="Entreprise" id="company" name="company" background={formBackground} />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Radio
            label="Comment nous avez-vous connus ?"
            id="hear_about"
            name="hear_about"
            options={hearAboutOptions}
            required
            background={formBackground}
        />
        <Checkbox
            label="Centres d'intérêt"
            id="interests"
            name="interests"
            options={interestOptions}
            background={formBackground}
        />
    </div>

    <Textarea label="Message" id="message" name="message" required background={formBackground} />

    <Checkbox
        label="J'accepte les termes et conditions"
        id="terms"
        name="terms"
        required
        background={formBackground}
    />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Select
            label="Quelle prestation vous intéresse ?"
            id="service"
            name="service"
            options={serviceOptions}
            required
            placeholder="Choose a service"
            background={formBackground}
        />
        <!-- <Select
            label="Budget Range"
            id="budget"
            name="budget"
            options={budgetOptions}
            required
            placeholder="Select your budget"
            background={formBackground}
        /> -->
    </div>

    <div class="mt-6">
        <Button type='submit'>Envoyer</Button>
    </div>
</form>
<script src="/js/contact.js" type="module"></script>
